{% comment %} Access "Average Rating" metafield {% endcomment %}
{% assign avg_rating = block.settings.product.metafields.reviews.average_rating.value %}

{% assign rounded_rating = avg_rating | round %}

<span style="color:{{ block.settings.colour }}">
  {% render 'stars', rating: rounded_rating %}
</span>

{% if avg_rating >= 4 %}
  <br>
  <img src="{{ "thumbs-up.png" | asset_img_url: '15x' }}" height="15" width="15" loading="lazy">
  {{ 'ratings.home.recommendationText' | t }}
{% endif %}

{% schema %}
{
  "name": "Star Rating",
  "target": "section",
  "settings": [
    { "type": "product", "id": "product", "label": "product", "autofill": true },
    { "type": "color", "id": "colour", "label": "Star Colour", "default": "#ff0000" }
  ]
}
{% endschema %}